 https://github.com/josean-dev/dev-environment-files/blob/main/.config/skhd/skhdrc

# -- Changing Window Focus --

# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# change focus between external displays (left and right)
alt + cmd - k: yabai -m display --focus north
alt + cmd - j: yabai -m display --focus south
alt + cmd - l: yabai -m display --focus east
alt + cmd - h: yabai -m display --focus west

# -- Modifying the Layout --

# rotate layout clockwise
# shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
# shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
# shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# -- Modifying Window Size --

# zoom
alt - z : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - b : yabai -m space --balance

# -- Moving Windows Around --

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to display top and bottom
shift + alt + cmd - k : yabai -m window --display north; yabai -m display --focus north;
shift + alt + cmd - j : yabai -m window --display south; yabai -m display --focus south;

# move window to prev and next space
shift + alt + cmd - h : yabai -m window --space prev;
shift + alt + cmd - l : yabai -m window --space next;

# move window to space #
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;

# close window
alt - x : yabai -m window --close
